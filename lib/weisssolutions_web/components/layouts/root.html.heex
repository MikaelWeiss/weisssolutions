<!DOCTYPE html>
<html lang="en" class="[scrollbar-gutter:stable] h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Weisssolutions">
      {assigns[:page_title] || "Software Development & Consulting"}
    </.live_title>
    
    <!-- Prevent flash of unstyled content -->
    <script>
      if (!('theme' in localStorage)) {
        localStorage.theme = 'dark';
        document.documentElement.classList.add('dark');
      } else if (localStorage.theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
    
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}>
    </script>
  </head>
  <body class="bg-[#1c1c1c] dark:bg-[#1c1c1c] transition-all duration-500 ease-in-out h-full">
    <!-- Navigation Bar -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-[#1c1c1c]/90 dark:bg-[#1c1c1c]/90 backdrop-blur-md border-b border-gray-800/20">
      <div class="container mx-auto px-6">
        <div class="flex items-center h-20">
          <!-- Logo/Home Link -->
          <a href="/" class="text-2xl font-bold tracking-tight text-white hover:text-emerald-500 transition-colors">
            Weiss Solutions
          </a>

          <!-- Navigation Links -->
          <div class="hidden md:flex items-center ml-auto">
            <a href="/" class="px-5 py-2 text-sm font-medium text-gray-300 hover:text-emerald-500 transition-colors">
              Home
            </a>
            <a href="/work" class="px-5 py-2 text-sm font-medium text-gray-300 hover:text-emerald-500 transition-colors">
              Work
            </a>
            <a href="/contact" class="px-5 py-2 text-sm font-medium text-gray-300 hover:text-emerald-500 transition-colors">
              Contact
            </a>

            <!-- Dark Mode Toggle -->
            <div class="pl-5">
              <.dark_mode_toggle />
            </div>
          </div>

          <!-- Mobile Menu and Dark Mode (Mobile) -->
          <div class="flex items-center gap-2 md:hidden ml-auto">
            <.dark_mode_toggle />
            <button 
              type="button"
              class="p-2 text-gray-300 hover:text-emerald-500 rounded-lg transition-colors"
              phx-click={JS.toggle(to: "#mobile-menu")}
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-gray-800/20">
        <div class="container mx-auto px-6 py-4">
          <a href="/" class="block py-3 text-base font-medium text-gray-300 hover:text-emerald-500 transition-colors">
            Home
          </a>
          <a href="/work" class="block py-3 text-base font-medium text-gray-300 hover:text-emerald-500 transition-colors">
            Work
          </a>
          <a href="/contact" class="block py-3 text-base font-medium text-gray-300 hover:text-emerald-500 transition-colors">
            Contact
          </a>
        </div>
      </div>
    </nav>

    <!-- Add padding to account for fixed navbar -->
    <div class="pt-20">
      {@inner_content}
    </div>
  </body>
</html>
